%rss(version="2.0" xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom")
  %channel
    %title Random Thoughts
    %atom:link(href="http://blog.acmarques.com/feed.xml" rel="self" type="application/rss+xml")
    %link http://blog.acmarques.com
    %description Random thoughts about software development.
    %pubDate&= formatRFC822Date(new Date())
    %language en
    :each article in articles
      %item
        %title&= article.title
        %link&= "http://blog.acmarques.com/" + article.name
        %comments&= "http://blog.acmarques.com/" + article.name + "#disqus_thread"
        %pubDate&= formatRFC822Date(article.date)
        %guid(isPermaLink="true")&= "http://blog.acmarques.com/" + article.name
        %description&= markdownEncode(article.markdown)
        %author&= article.author && (article.author.email + " (" + article.author.name + ")")
