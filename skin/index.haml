#main.clearfix
  :each article in articles.slice(0,15)
    .article
      .author
        By #{article.author.name}
        .date{title: article.date}&= formatDate(article.date, "%Y.%m.%d")
      %h3{style: "margin-right: 150px"}
        %a{href: "/" + article.name}&= article.title
      %p
        = intro(article.markdown)
      %a{href: "/" + article.name} Read more...

#sidebar          
  .bubble
    %h3
      Search
    %form{method: 'get', id: 'sform', action: 'http://www.google.com/search'}
      %input{type: 'hidden', name: 'sitesearch', value: 'http://blog.acmarques.com'}
      %div
        %input{type:"text", name:"q", id:"searchform_top_text", onclick:"this.value='';"}
        %input{type:"submit", id:"search_submit", value: 'Go'}

  .bubble{style: "background: #E8E8E8 !important"}
    :script
      new TWTR.Widget({
        version: 2,
        type: 'profile',
        rpp: 4,
        interval: 6000,
        width: 300,
        height: 300,
        theme: {
          shell: {
            background: '#e8e8e8',
            color: '#3e3e3e'
          },
          tweets: {
            background: '#ffffff',
            color: '#000000',
            links: '#21749b'
          }
        },
        features: {
          scrollbar: false,
          loop: false,
          live: false,
          hashtags: true,
          timestamp: true,
          avatars: false,
          behavior: 'all'
        }
      }).render().setUser('acmarques').start();     

  .bubble
    %h3
      Categories
    %ul
      :each category in categories
        %li
          %a{href: "/category/" + category }&= unescape(category)
       
  .bubble
    %h3
      Articles
    %ul
      :each article in articles.slice(0,20)
        %li
          %a{href: "/" + article.name}&=article.title  
  .bubble
    %h3
      Blogs
    %ul
      %li
        %a{href: "http://www.locawebers.com.br/" }Locawebers
      %li
        %a{href: "http://howtonode.org" }How to Node 
      %li
        %a{href: "http://giovanigenerali.com/" }Giovani Generali
      %li
        %a{href: "http://zenmachine.wordpress.com/" }the zen machine